{
	"name": "core-queue",
	"version": "0.4.0",
	"description": "Simple, zero dependency promise-based queue.",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"build-run": "tsc && node ./lib/index.js",
		"prepare" : "npm run build",
		"prepublishOnly" : "npm test && npm run lint",
		"preversion" : "npm run lint",
		"version" : "npm run format && git add -A src",
		"postversion" : "git push && git push --tags",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "tslint -p tsconfig.json",
		"test": "jest --config jestconfig.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nefritox/core-queue.git"
	},
	"files": [
		"lib/**/*"
	],
	"keywords": ["queue", "async-queue", "promise-queue", "flow-control"],
	"author": "Nefritox",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Nefritox/core-queue/issues"
	},
	"homepage": "https://github.com/Nefritox/core-queue#readme",
	"devDependencies": {
		"@types/jest": "^26.0.23",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.6",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.2.4"
	}
}
